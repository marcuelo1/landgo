= content_for :javascript_includes do
    = javascript_pack_tag "sellers_page"

.header.d-flex.justify-content-between 
    .page-title Seller's Page
    .actions-container.d-flex.justify-content-end
        .btn.btn-primary#details
            Details
        .btn.btn-primary#products
            Products
        .btn.btn-primary#product-category-sizes
            Category & Sizes
        .btn.btn-primary#product-add-ons
            Add Ons
%br/
.body
    #seller-details.seller-details
        = render partial: "/admin/seller/partials/seller_details"
    #seller-products.seller-products    
        = render partial: "/admin/product/partials/list_of_products"
    #seller-category-sizes.seller-category-sizes          
        = render partial: "/admin/product_category/partials/category_sizes"
    #seller-add-ons.seller-add-ons      
        .d-flex 
            .card 
                .card-header
                    %h3 Add On Groups
                .card-body 
                    =form_with(url: "/admin/add_on/group", method: :post) do |f|
                        = hidden_field_tag :seller_id, @seller.id, {}
                        = f.text_field :name, {class: "form-control", placeholder: "Name"}
                        %br/
                        = f.submit "Create", {class: "btn btn-primary btn-sm"}
                    %br/
                    %table.table 
                        %tr 
                            %th Name 
                            %th Action 
                        - @add_on_groups.each do |aog|
                            %tr
                                %td= aog.name 
                                %td None
            .card{style: "margin-left: 50px;"} 
                .card-header 
                    %h3 Add Ons 
                .card-body 
                    =form_with(url: "/admin/add_on", method: :post) do |f|
                        = f.text_field :name, {class: "form-control", placeholder: "Name"}
                        %br/
                        = f.text_field :price, {class: "form-control", placeholder: "Price"}
                        %br/
                        = f.collection_select :add_on_group_id, @add_on_groups, :id, :name, {}, {class: "form-select"}
                        %br/
                        = f.submit "Create", {class: "btn btn-primary btn-sm"}
                    %br/
                    %table.table 
                        %tr 
                            %th Name
                            %th Price 
                            %th Group 
                            %th Action 
                        - @add_ons.each do |ao|
                            %tr 
                                %td= ao.name 
                                %td= ao.price 
                                %td= ao.add_on_group.name 
                                %td None
        %br/
        