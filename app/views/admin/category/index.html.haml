#category-index
    .header.d-flex.justify-content-between 
        .page-title List of Categories
        .actions-container.d-flex.justify-content-end
            .btn.btn-primary.new-btn{url: "/admin/category/new"}
                %i.icon-plus
                Add Category
    %br/
    .body
        .card 
            .card-body
                .search-bar 
                    %input{type: "text", placeholder: "Search Seller", class: "form-control"}/
                    %i.icon-search 
                %br/
                %table.table-list 
                    %tr 
                        %th Name
                        %th Status
                        %th Image
                        %th Action
                    - @categories.each do |category|
                        %tr
                            %td= category.name 
                            %td= category.status 
                            %td
                                - if category.image.attached?
                                    = image_tag category.image, style: "width: 50px;"
                                - else
                                    = image_tag asset_path "no-photo-2.jpg"
                            %td
                                %a{href: "/admin/category/#{category.id}"}
                                    .show-btn.btn.btn-secondary
                                        %i.icon-eye-open 

        
