#riders-index
    .header.d-flex.justify-content-between 
        .page-title List of Riders
        .actions-container.d-flex.justify-content-end
            .btn.btn-primary.new-btn{url: "/admin/riders/new"}
                %i.icon-plus
                Add Rider
    %br/
    .body
        .card 
            .card-body
                .search-bar 
                    %input{type: "text", placeholder: "Search Rider", class: "form-control"}/
                    %i.icon-search 
                %br/
                %table.table-list 
                    %tr 
                        %th Name 
                        %th Email 
                        %th Phone Number 
                        %th Actions
                    - @riders.each do |rider|
                        %tr
                            %td= rider.name
                            %td= rider.email 
                            %td= rider.phone_number 
                            %td
                                %a{href: "/admin/riders/#{rider.id}"} 
                                    .show-btn.btn.btn-secondary
                                        %i.icon-eye-open 