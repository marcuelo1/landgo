#vouchers-index
    .header.d-flex.justify-content-between 
        .page-title List of Vouchers
        .actions-container.d-flex.justify-content-end
            .btn.btn-primary.new-btn{url: "/admin/vouchers/new"}
                %i.icon-plus
                Add Voucher
    %br/
    .body
        .card 
            .card-body
                .search-bar 
                    %input{type: "text", placeholder: "Search Voucher", class: "form-control"}/
                    %i.icon-search 
                %br/
                %table.table-list 
                    %tr 
                        %th Code
                        %th Description
                        %th Discount
                        %th Discount Type 
                        %th Min. Amount 
                        %th Max. Discount 
                        %th Valid From 
                        %th Valid Until 
                        %th Status
                        %th Actions
                    - @vouchers.each do |voucher|
                        %tr
                            %td= voucher.code 
                            %td= voucher.description 
                            %td= voucher.discount 
                            %td= voucher.discount_type 
                            %td= voucher.min_amount 
                            %td= voucher.max_discount  
                            %td= formated_datetime(voucher.valid_from)
                            %td= formated_datetime(voucher.valid_until)
                            %td= voucher.status 
                            %td
                                .edit-btn.show-btn.btn.btn-primary{url: "/admin/vouchers/#{voucher.id}/edit"}
                                    %i.icon-pencil 

        
